<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddingActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/addPanText"
        android:textColor="@android:color/black"
        android:padding="@dimen/big"
        android:textSize="36dp"
        />
    <LinearLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_height="64dp"
        android:layout_width="match_parent">
        <EditText
            android:paddingLeft="@dimen/big"
            android:hint="@string/priceText"
            android:id="@+id/editText"
            android:background="@drawable/round_corners"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight="1"
            android:inputType="number" />
        <Spinner
            android:id="@+id/currSpin"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"/>
    </LinearLayout>
    <TextView
        android:paddingTop="@dimen/big"
        android:textSize="28dp"
        android:text="@string/addPanText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small"
        android:textColor="@android:color/black"/>
    <Spinner
        android:id="@+id/category_plus"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/small"/>
    <TextView
        android:paddingTop="@dimen/big"
        android:textSize="28dp"
        android:text="@string/timedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <TextView
                android:gravity="bottom"
                android:id="@+id/dateText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="22.11.2010"
                android:textSize="22sp"
                android:layout_margin="24dp"/>
            <ImageButton
                android:id="@+id/date_button"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:gravity="bottom"
                android:id="@+id/timeText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="12:59:43"
                android:textSize="22sp"
                android:layout_margin="24dp"/>
            <ImageButton
                android:id="@+id/time_button"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_24dp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TEST"
            android:textSize="22sp"/>
        <ImageButton
            android:id="@+id/send"
            android:layout_height="56dp"
            android:layout_width="56dp"
            android:layout_margin="@dimen/small"
            android:src="@drawable/ic_send_black_24dp"
            android:background="@drawable/round_black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>

